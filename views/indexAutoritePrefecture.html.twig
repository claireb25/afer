{% extends 'template.html.twig' %}

{% block content %}

	

<h1>Liste des autorités (préfecture)</h1>


<table class="tbl-list" >
        <thead>
            <tr>
                <th class="tbl-col-header" >Autorité</th>
                <th class="tbl-col-header" >Action</th>
            </tr>
            <tr class="tbl-row-search">
                <td class="tbl-col-search"><input type="text" class="form-input" id="autorite" placeholder="Rechercher par autorité"></td>
                <td class="tbl-col-search"><input type="text" disabled class="form-input" ></td>
            </tr>
        </thead>
        <tbody>
        {% for elems in list %}

            <tr class="tbl-row-list ligne" >
                <td class="tbl-col-list capitalize service">{{elems.autorite_nom|raw }}</td>
                <td class="tbl-col-list " ><a href="autoriteprefecture/edit/{{elems.id }}" class="tbl-link-edit"  ></a>   <a href="autoriteprefecture/delete/{{ elems.id }}" class="tbl-link-delete" data-value="{{ elems.autorite_nom }}" ></a></td>
            </tr>

        {% endfor %}
    </tbody>
</table>
<a href="autoriteprefecture/new" class="btn-link"  >Ajouter</a>


<div class="boxOverlay hidden " >
        <div class="modal modal-yesNo fas fa-exclamation-triangle">                   
            <p class="modal-message">Êtes-vous sûre de vouloir supprimmer l'autorité : <span class="capitalize modal-message--value" ></span></p>                 
            <button type="button"  data-link="" onclick="deleteUser()" class="modal-btn form-login-button modal-btn--inline modal-btn-yes"  >Oui</button> <button type="button" class="modal-btn form-login-button modal-btn--inline modal-btn-no" > Non</button>
        </div>
    </div>

  {% endblock %}

 {% block javascript %} 
    <script src="assets/js/app.js" ></script>
    <script src="assets/js/yo.js"></script>
 {% endblock %}
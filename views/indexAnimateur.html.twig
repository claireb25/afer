{% extends 'template.html.twig' %} {% block content %}



<h1>Liste des Animateurs</h1>


<table class="tbl-list">
    <thead>
        <tr>
            <th class="tbl-col-header">Nom</th>
            <th class="tbl-col-header">Prénom</th>
            <th class="tbl-col-header">Raison Sociale</th>
            <th class="tbl-col-header">Fonction</th>
            <th class="tbl-col-header">Statut</th>
            <th class="tbl-col-header">Action</th>
        </tr>
        <tr class="tbl-row-search">
            <td class="tbl-col-search">
                <input type="text" class="form-input" id="nom" placeholder="Rechercher par nom">
            </td>
            <td class="tbl-col-search">
                <input type="text" class="form-input" id="prenom" placeholder="et/ou rechercher par prénom">
            </td>
            <td class="tbl-col-search">
                <input type="text" class="form-input" id="raison_sociale" placeholder="et/ou Rechercher par raison sociale">
            </td>
            <td class="tbl-col-search">
                <input type="text" class="form-input" id="fonction" placeholder="et/ou Rechercher par fonction">
            </td>
            <td class="tbl-col-search">
                <input type="text" class="form-input" id="statut" placeholder="et/ou Rechercher par statut">
            </td>            
                        
            <td class="tbl-col-search">
                <input type="text" disabled class="form-input">
            </td>
        </tr>
    </thead>
    <tbody>
        {% for elms in list %}

        <tr class="tbl-row-list ligne">
            <td class="tbl-col-list capitalize nom">{{elms.nom|raw }}</td>
            <td class="tbl-col-list capitalize prenom">{{elms.prenom|raw }}</td>
            <td class="tbl-col-list capitalize raison_sociale">{{elms.raison_sociale|raw }}</td>
            <td class="tbl-col-list capitalize fonction">{{elms.fonction_nom|raw }}</td>
            <td class="tbl-col-list capitalize statut">{{elms.statut_nom|raw }}</td>          
            <td class="tbl-col-list "> 
                <a href="animateur/view/{{elms.id }}" class="tbl-link-look"></a>               
                <a href="animateur/edit/{{elms.id }}" class="tbl-link-edit"></a>
                <a href="animateur/delete/{{elms.id }}" class="tbl-link-delete" data-value="{{ elms.nom }} {{ elms.prenom }}"></a>
            </td>
        </tr>

        {% endfor %}
    </tbody>
</table>
<a href="animateur/new" class="btn-link">Ajouter</a>


<div class="boxOverlay hidden ">
    <div class="modal modal-yesNo fas fa-exclamation-triangle">
        <p class="modal-message">Êtes-vous sûre de vouloir supprimmer l'animateur :
            <span class="capitalize modal-message--value"></span>
        </p>
        <button type="button" data-link="" onclick="deleteUser()" class="modal-btn form-login-button modal-btn--inline modal-btn-yes">Oui</button>
        <button type="button" class="modal-btn form-login-button modal-btn--inline modal-btn-no"> Non</button>
    </div>
</div>

{% endblock %} {% block javascript %}
<script src="assets/js/app.js"></script>
<script src="assets/js/yo.js"></script>
{% endblock %}
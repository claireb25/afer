{% extends 'template.html.twig' %}

  {% block content %} 
       
    <h1>Utilisateurs</h1>
    <table class="tbl-list" >
        <thead>
            <tr>
                <th class="tbl-col-header" >Identifiant</th>
                <th class="tbl-col-header" >Prénom</th>
                <th class="tbl-col-header" >Nom</th>
                <th class="tbl-col-header" >Action</th>
            </tr>
            <tr class="tbl-row-search">
                <td class="tbl-col-search"><input type="text" class="form-input" id="identifiant" placeholder="Rechercher par identifiant" ></td>
                <td class="tbl-col-search"><input type="text" class="form-input" id="firstname" placeholder="et/ou Rechercher par prénom"></td>
                <td class="tbl-col-search"><input type="text" class="form-input" id="name" placeholder="et/ou Rechercher par nom" ></td>
                <td class="tbl-col-search"><input type="text" disabled class="form-input" ></td>
                <td class="tbl-col-search" ></td>
            </tr>
        </thead>
        <tbody>
            {% for u in users %}

                <tr class="tbl-row-list ligne" >
                    <td class="tbl-col-list upper username">{{u.identifiant|raw }}</td>
                    <td class="tbl-col-list capitalize prenom">{{u.prenom|raw }}</td>
                    <td class="tbl-col-list upper nom" >{{u.nom|raw }}</td>
                    <td class="tbl-col-list capitalize" ><a href="users/edit/{{ u.id }}" class="tbl-link-edit"  ></a> {% if u.id != user.id %}  <a href="users/delete/{{ u.id }}" class="tbl-link-delete"  ></a>{% endif %}</td>
                </tr>

            {% endfor %}
        </tbody>
    </table>
    <a href="users/new" class="btn-link"  >Ajouter</a>  

    <div class="boxOverlay hidden " >
        <div class="modal modal-yesNo fas fa-exclamation-triangle">                   
            <p class="modal-message">Êtes-vous sûre de vouloir supprimmer l'utilisateur.</p>                 
            <button type="button"  data-link="" onclick="deleteUser()" class="modal-btn form-login-button modal-btn--inline modal-btn-yes"  >Oui</button> <button type="button" class="modal-btn form-login-button modal-btn--inline modal-btn-no" > Non</button>
        </div>
    </div>

  {% endblock %}

 {% block javascript %} 
    <script src="assets/js/app.js" ></script>
    <script src="assets/js/yo.js"></script>
 {% endblock %}

